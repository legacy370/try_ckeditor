<p id="notice"><%= notice %></p>

<h1>Flex Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flex_templates.each do |flex_template| %>
      <tr>
        <td><%= flex_template.name %></td>
        <td><%= flex_template.body %></td>
        <td><%= link_to 'Show', flex_template %></td>
        <td><%= link_to 'Edit', edit_flex_template_path(flex_template) %></td>
        <td><%= link_to 'Destroy', flex_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flex Template', new_flex_template_path %>
